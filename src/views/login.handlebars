<div class="login-container">
    <form action="/login" method="POST">
        <div>
            <input class="input" type="text" placeholder="Usuario" name="username" required>
            <span class="input-error">{{#if errors.username}}{{errors.username}}{{/if}}</span>
        </div>

        <div>
            <input class="input" autocomplete="off" id="passInput" type="password" placeholder="Contraseña" name="password" required>
            <span class="input-error">{{#if errors.password}}{{errors.password}}{{/if}}</span>
            <div>
                <input type="checkbox" id="showPass">Mostrar contraseña
            </div>
        </div>

        <div>
            <button type="submit">Ingresar</button>
        </div>

    </form>
</div>

<script src="/js/login.js"></script>